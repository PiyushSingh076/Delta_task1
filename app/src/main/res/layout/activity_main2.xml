<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardient_background"
    tools:context=".Activity_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="1dp"
                    app:srcCompat="@drawable/heart_icon" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="1dp"
                    app:srcCompat="@drawable/heart_icon">

                </ImageView>

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/heart_icon">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp">

                <Button

                    android:id="@+id/btnInfo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/baseline_info_24"
                    android:layout_gravity="right">

                </Button>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight=".6"
            android:orientation="vertical">


            <EditText
                android:id="@+id/answer_box"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_round2"
                android:gravity="center"
                android:hint="Your Guess"
                android:textAllCaps="true"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff"
                android:textSize="34dp">

            </EditText>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="20dp"
                android:verticalSpacing="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"

                android:id="@+id/gridview"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:gravity="bottom|center">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="50dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/button_2"
                android:fontFamily="@font/carter_one"
                android:text="Reset"
                android:textColor="#fff"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_height="50dp"
                android:layout_marginLeft="29dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_2"
                android:fontFamily="@font/carter_one"
                android:text="Check"
                android:textColor="#fff"
                android:textSize="25dp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>